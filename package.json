{
    "name": "cd-repo",
    "displayName": "CD Repo",
    "description": "Changes the terminal directory to the selected repository folder.",
    "version": "0.0.6",
    "publisher": "logerfo",
    "engines": {
        "vscode": "^1.26.0"
    },
    "bugs": {
        "url": "https://github.com/Logerfo/cd-repo/issues",
        "email": "bruno@logerfo.tk"
    },
    "author": {
        "email": "bruno@logerfo.tk",
        "name": "Bruno Logerfo",
        "url": "https://github.com/Logerfo"
    },
    "icon": "icon.png",
    "license": "Unlicense",
    "homepage": "https://github.com/Logerfo/cd-repo/blob/master/README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/Logerfo/cd-repo.git"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": [
            {
                "type": "object",
                "title": "CD Repo",
                "properties": {
                    "cd-repo.terminal": {
                        "scope": "resource",
                        "type": "string",
                        "enum": [
                            "AlwaysCreate",
                            "First",
                            "Last"
                        ],
                        "default": "AlwaysCreate",
                        "description": "Choose which terminal will be used to execute the commands."
                    },
                    "cd-repo.command": {
                        "scope": "resource",
                        "type": "string",
                        "enum": [
                            "cd",
                            "pushd"
                        ],
                        "default": "cd",
                        "description": "Choose which command will be used to change the directory."
                    },
                    "cd-repo.pullArgs": {
                        "scope": "resource",
                        "type": "string",
                        "default": "",
                        "description": "Choose which args will be used in the pull command."
                    },
                    "cd-repo.pushArgs": {
                        "scope": "resource",
                        "type": "string",
                        "default": "",
                        "description": "Choose which args will be used in the push command."
                    }
                }
            }
        ],
        "commands": [
            {
                "command": "cd-repo.cd",
                "title": "CD Repo"
            },
            {
                "command": "cd-repo.pull",
                "title": "Pull Repo"
            },
            {
                "command": "cd-repo.push",
                "title": "Push Repo"
            }
        ],
        "menus": {
            "scm/sourceControl": [
                {
                    "command": "cd-repo.cd",
                    "group": "cd-repo"
                },
                {
                    "command": "cd-repo.pull",
                    "group": "cd-repo"
                },
                {
                    "command": "cd-repo.push",
                    "group": "cd-repo"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "webpack --mode production",
        "compile": "webpack --mode none",
        "watch": "webpack --mode none --watch",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "@types/mocha": "^5.2.6",
        "@types/node": "^11.10.4",
        "ts-loader": "^5.3.3",
        "tslint": "^5.8.0",
        "typescript": "^3.3.3333",
        "vscode": "^1.1.21",
        "webpack": "^4.29.6",
        "webpack-cli": "^3.2.3"
    }
}
