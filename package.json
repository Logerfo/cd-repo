{
    "name": "cd-repo",
    "displayName": "CD Repo",
    "description": "Changes the terminal directory to the selected repository folder.",
    "version": "0.0.2",
    "publisher": "logerfo",
    "engines": {
        "vscode": "^1.26.0"
    },
    "bugs": {
        "url": "https://github.com/Logerfo/cd-repo/issues",
        "email": "bruno@logerfo.tk"
    },
    "author": {
        "email": "bruno@logerfo.tk",
        "name": "Bruno Logerfo",
        "url": "https://github.com/Logerfo"
    },
    "license": "Unlicense",
    "homepage": "https://github.com/Logerfo/cd-repo/blob/master/README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/Logerfo/cd-repo.git"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": [
            {
                "type": "object",
                "title": "CD Repo",
                "properties": {
                    "cd-repo.terminal": {
                        "scope": "resource",
                        "type": "string",
                        "enum": [
                            "AlwaysCreate",
                            "First",
                            "Last"
                        ],
                        "default": "AlwaysCreate",
                        "description": "Choose which terminal will be used to execute the cd command."
                    },
                    "cd-repo.command": {
                        "scope": "resource",
                        "type": "string",
                        "enum": [
                            "cd",
                            "pushd"
                        ],
                        "default": "cd",
                        "description": "Choose which command will be used to change the directory."
                    }
                }
            }
        ],
        "commands": [
            {
                "command": "extension.cd",
                "title": "CD Repo"
            }
        ],
        "menus": {
            "scm/sourceControl": [
                {
                    "command": "extension.cd"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}
